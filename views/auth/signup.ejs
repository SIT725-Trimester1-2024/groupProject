<%- include("../partials/header")%>
    <%- include("../partials/navbar")%>
        <div class="container">
            <%- include('../partials/flash') %>
                <h1 class="mb-3 mt-3">Register</h1>
                <form class="needs-validation" action="/register" method="POST" novalidate>
                    <div class="form-group mt-3">
                        <input type="email" class="form-control border-black" id="email" placeholder="Email"
                            name="username">
                    </div>
                    <div class="form-group mt-3">
                        <input type="title" class="form-control border-black" id="title" placeholder="Full Name"
                            name="title">
                    </div>

                    <div class="form-group mt-3">
                        <input type="password" class="form-control border-black" id="password" placeholder="Password"
                            name="password">
                    </div>

                    <div class="other-link mt-2">
                        <div>Already have an account? <a href="/login">Sign in</a> here</div>

                    </div>
                    <div class="center-this">
                        <button type="submit" class="btn btn-primary btn-block mt-3 custom-button">Register</button>
                    </div>
                </form>
                <div class="center-this">
                    <a href="/auth/google" class="btn btn-main blue ml-5 mt-3 custom-button">
                        <i class="fa fa-google text-lg text-white mr-2"></i> Sign In with
                        Google
                    </a>
                </div>
        </div>

        <%- include("../partials/footer")%>