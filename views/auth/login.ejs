<%- include("../partials/header")%> <%- include("../partials/navbar-2")%>
<div class="container">
  <%- include('../partials/flash') %>
  <div class="row">
    <h1 class="mb-3 mt-3">Login</h1>
    <form class="needs-validation" action="/login" method="POST" novalidate>
        <div class="form-group">
          <input
            type="email"
            class="form-control border-black"
            id="username"
            placeholder="Enter email"
            name="username"
          />
        </div>
        <div class="form-group mt-3">
          <input
            type="password"
            class="form-control border-black"
            id="password"
            placeholder="Password"
            name="password"
          />
        </div>
    
        <div class="other-link mt-2">
          <div>New member? <a href="/register">Create an account</a> here</div>
        </div>
        <div class="">
          <button
            type="submit"
            class="btn btn-primary btn-block mt-3 custom-button"
          >
            Login
          </button>
        </div>
      </form>
      <div class="">
        <a href="/auth/google" class="btn btn-main blue ml-5 mt-3 custom-button">
          <i class="fa fa-google text-lg text-white mr-2"></i> Sign In with Google
        </a>
    </div>
  </div>
  
</div>

<%- include("../partials/footer")%>
