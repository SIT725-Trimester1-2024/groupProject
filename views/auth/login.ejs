<%- include("../partials/header")%> 
<%- include("../partials/navbar")%> 
<div class="container">
    <h1 class="mb-3 mt-3">Login</h1>
    <form class="needs-validation" action="/login" method="POST" novalidate>
        <div class="form-group">
            <!-- <label for="email">Email address</label> -->
            <input type="email" class="form-control border-black" id="email" placeholder="Enter email">
        </div>
        <div class="form-group mt-3">
            <!-- <label for="password">Password</label> -->
            <input type="password" class="form-control border-black" id="password" placeholder="Password">
        </div>
        
        <div class="other-link mt-2">
            <div>New member? <a href="/register">Create an account</a> here</div>
            <!-- <div><a href="/">Forgot your password?</a></div> -->
        </div>
        <div class="center-this">
            <button type="submit" class="btn btn-primary btn-block mt-3 custom-button">Login</button>
        </div>
    </form>
    <div class=" center-this">
        <a href="/auth/google" class="btn btn-main blue ml-5 mt-3 custom-button">
            <i class="fa fa-google text-lg text-white mr-2"></i> Sign In with
            Google
        </a>
    </div>
</div>

